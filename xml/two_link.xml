<mujoco model="two_link">
    <compiler angle="radian"/>
    <default>
        <geom type="mesh" xyaxes="1 0 0 0 1 0"/>
    </default>

    <asset>
        <texture name="grid" type="2d" builtin="checker" rgb1=".1 .2 .3" rgb2=".2 .3 .4" width="300" height="300"/>
        <material name="grid" texture="grid" texrepeat="8 8" reflectance=".2"/>
        <mesh name="base" file="stl/base.stl" scale=".001 .001 .001"/>
        <mesh name="link1" file="stl/link1.stl" scale=".001 .001 .001"/>
        <mesh name="link2" file="stl/link2.stl" scale=".001 .001 .001"/>
    </asset>

    <worldbody>
        <geom name="floor" type="plane" pos="0 0 0" size="5 5 .1" material="grid"/>
        <light name="top" pos="0 0 .6" diffuse="1 1 1" specular=".5 .5 .5" attenuation=".1 .1 .1"/>

        <body name="base">
            <geom mesh="base"/>
            <body name="link1">
                <joint name="joint1" pos="0 0 .005" axis="0 0 1" range="-3.14 3.14" damping="1"/>
                <geom mesh="link1"/>
                <body name="link2">
                    <joint name="joint2" pos=".1 0 .01" axis="0 0 1" range="-3.14 3.14" damping="1"/>
                    <geom mesh="link2"/>
                </body>
            </body>
        </body>
    </worldbody>
<contact>
    <exclude body1="base" body2="link1"/>
    <exclude body1="link1" body2="link2"/>
</contact>

<actuator>
    <position name="joint1" joint="joint1" ctrllimited="true" ctrlrange="-3.14 3.14" kp="20" kv=".1"/>
    <position name="joint2" joint="joint2" ctrllimited="true" ctrlrange="-3.14 3.14" kp="20" kv=".1"/>
</actuator>

</mujoco>
